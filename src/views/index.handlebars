<div class="container mainContainer">
    <div class="row">

        {{#each products}}
        <div class="col-12 col-md-6">
            <div class="card border-light mb-3 container artifactCard">
                <div class="row">
                    <div class="col-4 d-flex align-items-center justify-content-center">
                        <img src="{{this.thumbnails}}" class="img-fluid" alt="...">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <h4 class="card-title itemName">{{this.title}}</h4>
                            <p class="card-text itemType">Categoria: {{this.category}}</p>
                            <p class="card-text">Codigo: {{this.code}}</p>
                            <p class="card-text">Descripcion: {{this.description}}</p>
                            <p class="card-text">Stock: {{this.stock}}</p>
                            <p class="card-text">Precio: {{this.price}}</p>
                            <p class="card-text">Status: {{this.status}}</p>
                            <p class="card-text">ID: {{this.id}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>